@page
@model MelisaIuliaProiect.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--VIN-->
            <input type="hidden" asp-for="Car.VIN" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.VIN" class="control-label"></label>
                <input asp-for="Car.VIN" class="form-control" />
                <span asp-validation-for="Car.VIN" class="text-danger"></span>
            </div>
            <!--Model-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.VehicleModelID" class="control-label">Model</label>
                <select asp-for="Car.VehicleModelID" class="form-control" asp-items="ViewBag.VehicleModelID"></select>
                <span asp-validation-for="Car.VehicleModelID" class="text-danger"></span>
            </div>
            <!--Body type-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.VehicleTypeID" class="control-label">Body type</label>
                <select asp-for="Car.VehicleTypeID" class="form-control" asp-items="ViewBag.VehicleTypeID"></select>
                <span asp-validation-for="Car.VehicleTypeID" class="text-danger"></span>
            </div>
            <!--Equipment-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.EquipmentID" class="control-label">Equipment</label>
                <select asp-for="Car.EquipmentID" class="form-control" asp-items="ViewBag.EquipmentID"></select>
                <span asp-validation-for="Car.EquipmentID" class="text-danger"></span>
            </div>
            <!--Fuel types-->
            <div class="form-group">
                <label>Fuel</label>
                    <table style="border-collapse: collapse; border: none; width: 100%;">
                        <tr style="border: none;">
                            @{
                                int cnt = 0;

                                foreach (var fuel in Model.AssignedFuelDataList)
                                {
                                    if (cnt++ % 2 == 0) // Two checkboxes per row
                                    {
                                        @:</tr><tr style="border: none;">
                                    }
                                    @:<td style="border: none; padding: 5px;">
                                        <input type="checkbox"
                                               name="selectedFuels"
                                               value="@fuel.FuelID"
                                               @(Html.Raw(fuel.Assigned ? "checked=\"checked\"" : "")) />
                                        @fuel.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </tr>
                    </table>
            </div>
            <!--Transmission-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.TransmissionID" class="control-label">Transmission</label>
                <select asp-for="Car.TransmissionID" class="form-control" asp-items="ViewBag.TransmissionID"></select>
                <span asp-validation-for="Car.TransmissionID" class="text-danger"></span>
            </div>
            <!--Horsepower-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.HorsePower" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Car.HorsePower" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">PS</span>
                    </div>
                </div>
                <span asp-validation-for="Car.HorsePower" class="text-danger"></span>
            </div>
            <!--Torque-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.Torque" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Car.Torque" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">Nm</span>
                    </div>
                </div>
                <span asp-validation-for="Car.Torque" class="text-danger"></span>
            </div>
            <!--Autonomy-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.Autonomy" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Car.Autonomy" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">km</span>
                    </div>
                </div>
                <span asp-validation-for="Car.Autonomy" class="text-danger"></span>
            </div>
            <!--Seller-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.SellerID" class="control-label">Seller</label>
                <select asp-for="Car.SellerID" class="form-control" asp-items="ViewBag.SellerID"></select>
                <span asp-validation-for="Car.SellerID" class="text-danger"></span>
            </div>
            <!--Price-->
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Car.Price" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Car.Price" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">€</span>
                    </div>
                </div>
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
